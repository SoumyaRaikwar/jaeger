{
  "priority": {{ .Priority }},
  "index_patterns": "{{ .IndexPrefix }}jaeger-service",
  "data_stream": {},
  "template": {
    {{- if .UseILM }}
    "aliases": {
      "{{ .IndexPrefix }}jaeger-service-read": {}
    },
    {{- end }}
    "settings": {
      "index.number_of_shards": {{ .Shards }},
      "index.number_of_replicas": {{ .Replicas }},
      "index.mapping.nested_fields.limit": 50,
      "index.requests.cache.enable": true,
      "index.default_pipeline": "jaeger-ds-service-timestamp"
      {{- if .UseILM }},
      "lifecycle": {
        "name": "{{ .ILMPolicyName }}",
        "rollover_alias": "{{ .IndexPrefix }}jaeger-service-write"
      }
      {{- end }}
    },
    "mappings": {
      "dynamic_templates": [
        {
          "span_tags_map": {
            "mapping": {
              "type": "keyword",
              "ignore_above": 256
            },
            "path_match": "tag.*"
          }
        },
        {
          "process_tags_map": {
            "mapping": {
              "type": "keyword",
              "ignore_above": 256
            },
            "path_match": "process.tag.*"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "epoch_millis"
        },
        "serviceName": {
          "type": "keyword",
          "ignore_above": 256
        },
        "operationName": {
          "type": "keyword",
          "ignore_above": 256
        }
      }
    }
  }
}
