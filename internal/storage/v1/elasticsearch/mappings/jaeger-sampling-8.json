{
  "priority": {
    { .Priority
    }
  },
  "index_patterns": [
    "{{ .IndexPrefix }}jaeger-sampling*"
  ],
  "template": {
    {
      {- if .UseILM
      }
    }
    "aliases": {
      "{{ .IndexPrefix }}jaeger-sampling-read": {}
    },
    {
      {- end
      }
    }
    "settings": {
      "index.number_of_shards": {
        { .Shards
        }
      },
      "index.number_of_replicas": {
        { .Replicas
        }
      },
      "index.mapping.nested_fields.limit": 50,
      "index.requests.cache.enable": true
      {
        {- if .EnableLogsDB
        }
      },
      "index.mode": "logsdb"{
        {- end
        }
      }
      {
        {- if .UseILM
        }
      },
      "lifecycle": {
        "name": "{{ .ILMPolicyName }}",
        "rollover_alias": "{{ .IndexPrefix }}jaeger-sampling-write"
      }
      {
        {- end
        }
      }
      {
        {- if .UseISM
        }
      },
      "plugins.index_state_management.policy_id": "jaeger-ism-policy"{
        {- end
        }
      }
    },
    "mappings": {}
  }
}